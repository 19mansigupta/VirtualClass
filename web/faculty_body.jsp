<div class="container">
    <div class="row">
        <h2>Address</h2>
    </div>
    <hr>
    <form class="form-horizontal" action="Action?address=true">
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-4">Name:</label>
            <div class="col-md-6 col-sm-6">
                <input type="text" class="form-control" placeholder="Enter Name" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-4">Phone No:</label>
            <div class="col-md-6 col-sm-6">
                <input type="text" class="form-control" placeholder="Enter Phone No" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-4">Address:</label>
            <div class="col-md-6 col-sm-6">
                <input type="text" class="form-control" placeholder="Enter Address" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-4"></label>
            <div class="col-md-6 col-sm-6">
                <input type="submit" class="btn" value="Confirm Order">
            </div>
        </div>
    </form>
</div>